# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET		/											Application.index
GET		/stemmen-met-je-donder						Application.show
POST	/stemmen-met-je-donder						Application.vote

GET		/locations.xls								Locations.xls
GET		/locations.json								Locations.index
GET		/locations/{slug}.json						Locations.show

GET		/locations/{slug}/measurements.json			LocationMeasurements.index
POST	/locations/{slug}/measurements.json			LocationMeasurements.create


# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public


*      /admin              module:crud